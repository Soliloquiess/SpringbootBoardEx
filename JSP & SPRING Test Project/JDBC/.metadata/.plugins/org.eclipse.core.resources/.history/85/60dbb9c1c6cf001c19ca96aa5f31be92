package com.util.db;

public class DB {
	
	//DB 정보 - DB.DRIVER
	public final static String DRIVER = "oracle.jdbc.driver.OracleDriver";
	public final static String URL = "jdbc:oracle:thin:@localhost:1521:orcl"; // 서버, 포트 정보 등이 있어야 한다.
	public final static String UID = "java00";
	public final static String UPW = "java00";
	
	//checkDriver가 true면 있는거. false면 없는거
	private static boolean checkDriver = false;
	//static 초기화 블록
	//처음 실행되는 main에서 class.forName(DB)코드를 넣어줘야 실행된다.
	static {
		try {
		Class.forName(DRIVER);
		//드라이버 있는 경우
		checkDriver = true;
	}catch(ClassNotFoundException e) {
		e.printStackTrace();
	}
	}	
	
}
